{
	"compilerOptions": {
		"strictNullChecks": true,
		"noUnusedLocals" : false,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"lib": ["dom", "es2017"],
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "esnext",
		"baseUrl": ".",
		"paths": {
			"*": [
				"*",
				"src/*"
			]
		}
	}
}
